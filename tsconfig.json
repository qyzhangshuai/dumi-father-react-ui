{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strictNullChecks": false,
    "allowJs": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "paths": {
      "z-react-ui/esm/*": ["src/*"],
      "z-react-ui/lib/*": ["src/*"],
      "z-react-ui": ["src/index.ts"],
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "typings.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test"
  ]
}
